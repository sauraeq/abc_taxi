<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.ViewProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_canlemark"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsemibold"
                android:text="View Profile"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp">

            </TextView>

            <ImageView

                android:id="@+id/back_act_view"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/canclemark" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/User_profile_pic"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/driverimg"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_90sdp"
                android:background="@drawable/circlebackblack"
                android:layout_marginLeft="@dimen/_79sdp">

                <ImageView
                    android:id="@+id/edit_profile_imageview"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:src="@drawable/edita">

                </ImageView>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">
            <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/_13ssp"
                android:layout_height="@dimen/_19sdp">
            </TextView>
            <TextView
                android:id="@+id/User_name"
                android:text="Alexis"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:layout_height="@dimen/_19sdp">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="#000" />
            <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_height="@dimen/_19sdp">
            </TextView>
            <TextView
                android:id="@+id/User_email"
                android:text="alexisenache@xyz.com"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:layout_height="@dimen/_19sdp">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="#000" />
            <TextView
                android:text="Address"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:layout_height="@dimen/_19sdp">
            </TextView>
            <TextView
                android:id="@+id/user_gender"
                android:text="London"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:layout_height="@dimen/_19sdp">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="#000" />


        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>