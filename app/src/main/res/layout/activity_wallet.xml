<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".Main.Wallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_canlemark"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsemibold"
                android:text="Wallet"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp">

            </TextView>

            <ImageView
                android:id="@+id/back_icon_wallet"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/canclemark" />
        </RelativeLayout>



<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_35sdp"
    android:layout_height="@dimen/_150sdp">
    <ImageView
        android:src="@drawable/wallet_bck"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>
</LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content">


    <TextView
        android:text="Payment method"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <RelativeLayout
                    android:background="@drawable/payment_bck"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:src="@drawable/visa">

                    </ImageView>

                </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:text="@string/paytm"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:background="@drawable/payment_bck"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:src="@drawable/cash_icon">

                        </ImageView>

                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:text="@string/cash"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:background="@drawable/payment_bck"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:src="@drawable/add_payment">

                        </ImageView>

                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:text="Add payment method"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>